{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compile Pascal",
        "type": "shell",
        "command": "fpc",
        "args": [
          "${file}"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": [
          "$gcc"
        ],
        "detail": "Compile the current Pascal file"
      },
      {
        "label": "Run Pascal",
        "type": "shell",
        "command": "${workspaceFolder}/${fileBasenameNoExtension}",
        "group": {
          "kind": "test",
          "isDefault": true
        },
        "dependsOn": "Compile Pascal"
      }
    ]
  }  